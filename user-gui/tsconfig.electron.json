{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist-electron",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@horsebet/shared/*": ["../shared/*"]
    }
  },
  "include": ["electron/**/*.ts"]
}
