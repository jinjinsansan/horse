{
  "name": "user-gui",
  "private": true,
  "version": "1.0.3",
  "description": "HorseBet Electron GUI",
  "author": "HorseBet",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run electron:serve\"",
    "electron:serve": "tsc -p tsconfig.electron.json && node scripts/postbuild-electron.mjs && cross-env NODE_ENV=development electron dist-electron/main.js",
    "build": "tsc -b && vite build && tsc -p tsconfig.electron.json && node scripts/postbuild-electron.mjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@horsebet/shared": "file:../shared",
    "@supabase/supabase-js": "^2.84.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.554.0",
    "playwright": "^1.56.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.horsebet.user",
    "productName": "HorseBet User",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "jinjinsansan",
      "repo": "horse"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.utilities"
    }
  }
}
